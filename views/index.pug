extends layout/main

block content
    .ec-main-section
            .container
                .row
                    .col-lg-8
                        .ec-fancy-title
                            h2 #{streamTitle} | 
                                span#viewerCount
                        .ec-map
                            #playerElement(style='width:100%; height:0; padding:0 0 56.25% 0')
                    .col-lg-4
                        .ec-fancy-title
                            h2 Discord Chat - 
                                a(href="https://discord.gg/qAtPmuj" style="color:#e11b1b" target="_blank") Join
                        .ec-map
                            #chat-wrapper
                                #chat-window
                                    ul

                .row
                    .col-md-12
                        .ec-simple-title
                            h2 Become a Supporter!
                            p
                            | If you'd like to help keep the stream running, please visit my 
                            a(href="https://www.patreon.com/powerspike_net" style="color:#e11b1b" target="_blank") Patreon 
                            | and become a supporter! Below are our current supporters.
                .row
                    .col-md-6
                        .ec-fancy-title
                            h2 List of Subscribers
                            a(href="https://www.patreon.com/powerspike_net" target="_blank")
                                .badge.badge-pill.badge-add + Become A Supporter
                        .ec-map.supporter-list
                            .badge.badge-pill.badge-diamond zsbzsb
                            .badge.badge-pill.badge-diamond Rob & Cheryl
                    .col-md-6
                        .ec-fancy-title
                            h2 Donation Goal
                            a(href="https://www.paypal.me/bnickerson" target="_blank")
                                .badge.badge-pill.badge-add + Donate
                        .ec-map.goal-progress
                            .progress
                                #goalProgress.progress-bar.progress-bar-striped.progress-bar-big(role='progressbar', style='width: 0%', aria-valuemin='0', aria-valuemax='100')
                                    span#goalTag $0
